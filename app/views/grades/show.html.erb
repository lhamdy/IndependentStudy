<h1> Student <%= @student.sid %></h1>

<h2> Previous courses: </h2>

<%= link_to "Add a new grade for student", grades_new_path %>

<table>
    <thead>
        <tr>
            <th> Course ID </th>
            <th> Course Title </th>
            <th> Grade </th>
        </tr>
    </thead>
    <tbody>
    <% @grades_.each do |grade_| %>
      <tr>
        <td><%= grade_.cid %></td>
        <% if grade_.course %>
          <td><%= grade_.course.title %></td>
        <% else %>
          <td>No course associated</td>
        <% end %>
        <td><%= grade_.grade %></td>
      </tr>
    <% end %>
  </tbody>

</table>
